<%= form_for Comment.new do |f| %>
  <%= f.label :content %><br/>
  <%= f.text_area :content, placeholder: "Add a comment" %><br/>
  <%= f.hidden_field :commentable_type, :value => commentable_type %>
  <%= f.hidden_field :commentable_id, :value => commentable_id %>
  <%= f.submit "Add Comment" %>
<% end %>
